        <div class="pro-container">

            <% newshoes.forEach(function(shoes){%>
                <div class="pro">
                    <img src="img/products/<%= shoes.img%>.jpg" alt="">
                    <div class="des">
                        <span>
                            <%= shoes.cName%>
                        </span>
                        <h5>
                            <%= shoes.pName%>
                        </h5>
                        <div class="star">
                            <% var sz=shoes.star; %>
                                <!-- use Semi colon inside the sz=shoes.star ;  -->
                                <% for(var i=1; i < sz; i++) { %>
                                    <i class="fas fa-star"></i>
                                    <% } %>
                        </div>
                        <h4>Rs <%= shoes.price %>/-
                        </h4>
                    </div>
                    <form action="/add" method="post">
                        <button type="submit" style="background: transparent; border: none !important;" name="item" value="<%= shoes._id%>"> <i
                                class="fal fa-shopping-cart cart"></i></button>

                        <input type="hidden" name="img" value="<%=shoes.img%>" />
                        <input type="hidden" name="site" value="<%=site%>" />

                    </form>
                </div>
                <%})%>




        </div>
    </section>

