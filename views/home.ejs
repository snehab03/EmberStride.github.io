        </div>

        <div class="fe-box">
            <img src="img/features/f6.png" alt="">
            <h6>Free Shipping</h6>
        </div>
    </section>

    <section id="product1" class="section-p1">
        <h2>Featured Products</h2>
        <p>Summer Collection New Modern Design</p>
        <div class="pro-container">

            <% oldshoes.forEach(function(shoes){%>


                <div class="pro">

                    <img src="img/products/<%= shoes.img%>.jpg" alt="">
                    <div class="des">
                        <span>
                            <%= shoes.cName%>
                        </span>
                        <h5>
                            <%= shoes.pName%>
                        </h5>
                        <div class="star">
                            <% var sz=shoes.star; %>
                                <!-- use Semi colon inside the sz=shoes.star ;  -->
                                <% for(var i=1; i <=sz; i++) { %>
                                    <i class="fas fa-star"></i>
                                    <% } %>
                        </div>
                        <h4>Rs <%= shoes.price %>/-
                        </h4>
                    </div>
                    <form action="/add" method="post">
                        <button type="submit" style="background: transparent; border: none !important;" name="item" value="<%= shoes._id%>">
                            <i class="fal fa-shopping-cart cart"></i>
                        </button>
                        <input type="hidden" name="img" value="<%=shoes.img%>" />
                        <input type="hidden" name="site" value="<%=site%>" />
                    </form>
                </div>

                <%})%>
        </div>
    </section>

    <section id="banner" class="section-m1">
        <h4>Repair Services</h4>
        <h2>Up to <span>70% Off</span> - All t-Shirts & Accessories </h2>
        <button class="normal">Explore More</button>
    </section>

    <section id="product1" class="section-p1">
        <h2>New Arrivals</h2>
